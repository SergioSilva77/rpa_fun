<Window x:Class="RpaInventory.App.WorkspaceExplorer.WorkspaceFilePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview"
        Width="920"
        Height="680"
        WindowStartupLocation="CenterOwner"
        Background="#FF1B1B1B"
        Foreground="#FFF6F6F6">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="FilePathText"
                   Grid.Row="0"
                   Foreground="#FFBEBEBE"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10" />

        <TextBox x:Name="ContentTextBox"
                 Grid.Row="1"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Background="#FF121212"
                 BorderBrush="#FF4A4A4A"
                 BorderThickness="1"
                 Foreground="#FFF6F6F6"
                 FontFamily="Consolas"
                 FontSize="13"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap" />

        <Button Grid.Row="2"
                Content="Fechar"
                Width="90"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Background="#FF3A3A3A"
                BorderBrush="#FF2D2D2D"
                BorderThickness="1"
                Foreground="#FFF6F6F6"
                Click="Close_Click" />
    </Grid>
</Window>

