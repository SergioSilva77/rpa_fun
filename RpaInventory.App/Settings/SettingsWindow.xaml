<Window x:Class="RpaInventory.App.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configurações" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Configurações de Snap e Formatação"
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,20" />

        <StackPanel Grid.Row="1">
            <GroupBox Header="Snap" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Limiar de Snap (pixels)" 
                                   VerticalAlignment="Center" />
                        <Slider Grid.Column="1" 
                                Minimum="5" 
                                Maximum="50" 
                                Value="{Binding SnapThresholdPixels}"
                                Width="200"
                                TickFrequency="5"
                                IsSnapToTickEnabled="True" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding SnapThresholdPixels, UpdateSourceTrigger=PropertyChanged}"
                                 TextAlignment="Center" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Snap ao Centro (pixels)" 
                                   VerticalAlignment="Center" />
                        <Slider Grid.Column="1" 
                                Minimum="5" 
                                Maximum="30" 
                                Value="{Binding CenterSnapThreshold}"
                                Width="200"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding CenterSnapThreshold, UpdateSourceTrigger=PropertyChanged}"
                                 TextAlignment="Center" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Snap nas Arestas (pixels)" 
                                   VerticalAlignment="Center" />
                        <Slider Grid.Column="1" 
                                Minimum="1" 
                                Maximum="10" 
                                Value="{Binding EdgeSnapThreshold}"
                                Width="200"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding EdgeSnapThreshold, UpdateSourceTrigger=PropertyChanged}"
                                 TextAlignment="Center" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Alinhamento">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Limiar de Ângulo (graus)" 
                                   VerticalAlignment="Center" />
                        <Slider Grid.Column="1" 
                                Minimum="1" 
                                Maximum="15" 
                                Value="{Binding AlignmentAngleThreshold}"
                                Width="200"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding AlignmentAngleThreshold, UpdateSourceTrigger=PropertyChanged}"
                                 TextAlignment="Center" />
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OkButton_Click" />
            <Button Content="Cancelar" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>

